<div class="container-fluid">
  <div class="row">
    <div class="post-name">
      <h2><%= @post.name %></h2>
  <p class="post-info">
    <%= @post.theme %> |
    <%= @post.created_at %>
  </p>
</div>
<div class="post-image">
  <%= image_tag(@post.image_url, class: "img-fluid") if @post.image_url%>
</div>

<div class="post-name">
  <p class="post-info">
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', post_path %>
  </p>
</div>

<div class="post-description">
  <%= @post.description %>
</div>

<hr class="line-dotted"/>
  <%= render 'comments' %>
  <p class="comment-pagination"><%= will_paginate @comments %></p>
  <%= render 'new_comment' %>
</div>
</div>
